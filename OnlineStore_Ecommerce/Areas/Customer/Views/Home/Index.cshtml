@using OnlineStore_Ecommerce.Models;
@model IEnumerable<Products>
@{
    ViewData["Title"] = "Home Page";
}
<br />
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="m-0">
                        <label>@product.Name</label>
                    </h4>
                </div>
                <img src="~/@product.Image" alt="Card Image" class="card-img-top">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size:20px">Price: @product.Price</label>
                            <a asp-action="Details" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-outline-primary">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>